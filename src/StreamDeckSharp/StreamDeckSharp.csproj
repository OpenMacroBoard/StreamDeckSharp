    <ProjectReference Include="..\..\..\OpenMacroBoard.SDK\src\OpenMacroBoard.SDK\OpenMacroBoard.SDK.csproj" />
    <None Include="icon.png" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
